<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.NoActionBar">
        <!-- status bar style -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar" >true</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- Activity Theme -->
    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:windowContentOverlay">@null</item>

        <!-- prevents multiple view touches -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <!-- colors -->
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- component styles -->
        <item name="android:textAllCaps">false</item>
        <!--        <item name="editTextStyle">@style/AppEditText</item>-->
        <item name="snackbarStyle">@style/AppSnackbar</item>
        <item name="snackbarButtonStyle">@style/AppSnackbar.Button</item>
        <item name="snackbarTextViewStyle">@style/AppSnackbar.TextView</item>
        <!-- edit text input field cursor color -->
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TitleBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="mainTitleTextColor">@color/tbc_10</item>
        <item name="mainTitleTextGravity">center</item>
        <item name="titleBarBackground">@color/on_primary</item>
        <item name="mainTitleTextStyle">bold</item>
        <item name="mainTitleTextSize">20dp</item>
        <item name="showShadow">hide</item>
        <item name="shadowHeight">1dp</item>
        <item name="shadowBackground">@color/tbc_40</item>
        <item name="subActionTextSize">@dimen/size18</item>
        <item name="subActionViewPaddingEnd">0dp</item>
        <item name="menuActionViewMarginTop">@dimen/size09</item>
        <item name="menuActionViewMarginEnd">@dimen/size06</item>
        <item name="menuWindowBackground">@drawable/shape_ra02_bg_tbc10</item>
        <item name="menuWindowItemLayout">@layout/list_item_title_menu</item>
        <item name="menuWindowWidth">@dimen/size144</item>
        <item name="actionBadgeBackground">@null</item>
        <item name="actionBadgeWidth">14dp</item>
        <item name="actionBadgeHeight">14dp</item>
        <item name="actionBadgeMarginTop">12dp</item>
        <item name="actionBadgeMarginBottom">0dp</item>
        <item name="actionBadgeMarginEnd">9dp</item>
        <item name="actionBadgeMarginStart">0dp</item>
        <item name="actionBadgeTextColor">@color/tbc_10</item>
        <item name="actionBadgeTextSize">10dp</item>
        <item name="actionBadgeTextStyle">normal</item>
        <item name="actionBadgeLayoutGravity">top|end</item>
        <item name="customLayout">@layout/titlebar</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="firstActionDrawableSrc">@drawable/ic_back</item>
    </style>
    
    <style name="Spinner">
        <item name="sv_textColor">@color/tbc_100</item>
        <item name="sv_overlayColor">@color/tbc_0</item>
        <item name="sv_smallDotRadius">1dp</item>
        <item name="sv_bigDotRadius">2dp</item>
        <item name="sv_indicatorInset">3dp</item>
        <item name="sv_indicatorWidth">6dp</item>
        <item name="sv_textSize">14dp</item>
        <item name="sv_textFormatPattern">"#"</item>
        <item name="sv_maxValue">100.0</item>
        <item name="sv_minValue">0.0</item>
        <item name="sv_value">10.0</item>
        <item name="sv_stepGapSize">10dp</item>
        <item name="sv_stepMarginStart">10dp</item>
        <item name="sv_stepMarginEnd">10dp</item>
        <item name="sv_stepValue">1.0</item>
        <item name="sv_stepBigValue">5.0</item>
        <item name="sv_textStepValue">10.0</item>
        <item name="sv_flingEnabled">true</item>
        <item name="sv_showEdgeText">false</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomSheetDialog.HideStatusBar" parent="AppTheme.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>