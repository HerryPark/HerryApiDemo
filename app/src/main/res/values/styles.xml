        <item name="ad_bottomPaddingBottom">0dp</item>
        <item name="ad_bottomDivider">@null</item>
        <item name="ad_bottomDividerHeight">0dp</item>
        <item name="ad_buttonLayoutOrientation">horizontal</item>
