<resources>
    <!-- the AppButton's style -->
    <style name="AppButton">
        <item name="abForeground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppButton.Icon" parent="AppButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="abWidth">36dp</item>
        <item name="abHeight">36dp</item>
        <item name="abCornerRadius">12dp</item>
        <item name="abIconWidth">wrap_content</item>
        <item name="abIconHeight">24dp</item>
        <item name="abIconAdjustViewBounds">true</item>
        <item name="abIconScaleType">fitXY</item>
        <item name="abBackground">@drawable/drawables_e_transparent_fp_onprimary10_s_accent10_d_transparent</item>
        <item name="abIconSrcTint">@color/colors_efp_onprimary_s_accent_d_onprimary30</item>
        <item name="abIconSrcTintMode">src_in</item>
    </style>

    <style name="AppButton.Radio" parent="AppButton.Icon">
        <item name="abIconSrc">@drawable/ic_radio</item>
        <item name="abBackground">@null</item>
        <item name="abForeground">@null</item>
    </style>

    <style name="AppButton.Icon.WTFix" parent="AppButton.Icon">
        <item name="abBackground">@drawable/drawables_e_transparent_fps_wtfix10_d_transparent</item>
        <item name="abIconSrcTint">@color/colors_e_wtfix_fp_wtfix80_d_wtfix30</item>
    </style>

    <style name="AppButton.Subscribe" parent="AppButton.Icon">
        <item name="abBackground">@drawable/drawables_e_transparent_fps_accent25_d_transparent</item>
        <item name="abIconSrcTint">@null</item>
    </style>

    <style name="AppButton.Standard" parent="AppButton">
        <item name="abWidth">match_parent</item>
        <item name="abHeight">36dp</item>
        <item name="abLayoutGravity">center</item>
        <item name="abCornerRadius">6dp</item>
        <item name="abPaddingVertical">4dp</item>
        <item name="abPaddingHorizontal">14dp</item>
        <item name="abIconWidth">wrap_content</item>
        <item name="abIconHeight">24dp</item>
        <item name="abIconAdjustViewBounds">true</item>
        <item name="abIconRelativeOfText">start</item>
        <item name="abIconTextRelativeMargin">6dp</item>
        <item name="abIconSrcTint">@color/colors_efp_onprimary_s_accent_d_onprimary30</item>
        <item name="abIconSrcTintMode">src_in</item>
        <item name="abTextWidth">wrap_content</item>
        <item name="abTextHeight">0dp</item>
        <item name="abTextGravity">center</item>
        <item name="abTextColor">@color/colors_efp_onprimary_s_accenttxt_d_onprimary30</item>
        <item name="abTextSize">14dp</item>
        <item name="abTextStyle">normal</item>
        <item name="abTextMaxLines">1</item>
    </style>

    <style name="AppButton.TextOnly" parent="AppButton">
        <item name="abWidth">match_parent</item>
        <item name="abHeight">32dp</item>
        <item name="abLayoutGravity">center</item>
        <item name="abTextWidth">wrap_content</item>
        <item name="abTextHeight">wrap_content</item>
        <item name="abTextGravity">center</item>
        <item name="abTextColor">@color/colors_e_onprimary_f_onprimary80_ps_onprimary70_d_onprimary30</item>
        <item name="abTextSize">14dp</item>
        <item name="abTextStyle">normal</item>
        <item name="abTextMaxLines">1</item>
    </style>

    <style name="AppButton.TextOnly.Accent" parent="AppButton.TextOnly">
        <item name="abWidth">match_parent</item>
        <item name="abHeight">32dp</item>
        <item name="abLayoutGravity">center</item>
        <item name="abTextWidth">wrap_content</item>
        <item name="abTextHeight">wrap_content</item>
        <item name="abTextGravity">center</item>
        <item name="abTextColor">@color/colors_e_accenttxt_fps_accenttxt75_d_onprimary40</item>
        <item name="abTextSize">14dp</item>
        <item name="abTextMarginEnd">16dp</item>
        <item name="abTextStyle">normal</item>
        <item name="abTextMaxLines">1</item>
    </style>

    <style name="AppButton.Standard.Outline" parent="AppButton.Standard">
        <item name="abBackground">@drawable/drawables_outline_r06_e_transparent_fp_onprimary15_d_transparent</item>
    </style>

    <style name="AppButton.Standard.Fill.Solid" parent="AppButton.Standard">
        <item name="abBackground">@drawable/drawables_fill_e_onprimary10_fp_onprimary15_d_onprimary10</item>
    </style>

    <style name="AppButton.Standard.Fill.Accent" parent="AppButton.Standard">
        <item name="abBackground">@drawable/drawables_fill_e_accent_fp_accent75_d_onprimary10</item>
        <item name="abTextColor">@color/colors_efp_wtfix_d_onprimary30</item>
        <item name="abIconSrcTint">@color/colors_efp_wtfix_d_onprimary30</item>
    </style>

    <style name="AppButton.Standard.Fill.AccentGradient" parent="AppButton.Standard.Fill.Accent">
        <item name="abBackground">@drawable/drawables_fill_gradient_e_accent_fp_accent75_d_onprimary10</item>
    </style>

    <style name="AppButton.Small" parent="AppButton">
        <item name="abWidth">wrap_content</item>
        <item name="abHeight">28dp</item>
        <item name="abLayoutGravity">center</item>
        <item name="abCornerRadius">6dp</item>
        <item name="abPaddingVertical">4dp</item>
        <item name="abPaddingHorizontal">10dp</item>
        <item name="abTextWidth">wrap_content</item>
        <item name="abTextHeight">0dp</item>
        <item name="abTextGravity">center</item>
        <item name="abTextColor">@color/colors_efp_onprimary_s_accenttxt_d_onprimary30</item>
        <item name="abTextSize">12dp</item>
        <item name="abTextStyle">normal</item>
        <item name="abTextMaxLines">1</item>
    </style>

    <style name="AppButton.Small.Outline" parent="AppButton.Small">
        <item name="abBackground">@drawable/drawables_outline_r06_e_transparent_fp_onprimary10_d_transparent</item>
    </style>

    <style name="AppButton.Small.Fill.Solid" parent="AppButton.Small">
        <item name="abBackground">@drawable/drawables_fill_e_onprimary10_fp_onprimary15_d_onprimary10</item>
    </style>

    <style name="AppButton.Small.Fill.Accent" parent="AppButton.Small">
        <item name="abBackground">@drawable/drawables_fill_e_accent_fp_accent75_d_onprimary10</item>
        <item name="abTextColor">@color/colors_efp_wtfix_d_onprimary30</item>
    </style>

    <style name="AppButton.Large" parent="AppButton.Standard">
        <item name="abWidth">wrap_content</item>
        <item name="abHeight">60dp</item>
        <item name="abLayoutGravity">center</item>
        <item name="abCornerRadius">12dp</item>
        <item name="abPaddingVertical">8dp</item>
        <item name="abPaddingHorizontal">40dp</item>
        <item name="abIconWidth">wrap_content</item>
        <item name="abIconHeight">24dp</item>
        <item name="abIconAdjustViewBounds">true</item>
        <item name="abIconRelativeOfText">start</item>
        <item name="abIconTextRelativeMargin">8dp</item>
        <item name="abIconSrcTint">@color/colors_efp_onprimary_s_accent_d_onprimary30</item>
        <item name="abIconSrcTintMode">src_in</item>
        <item name="abTextWidth">wrap_content</item>
        <item name="abTextHeight">0dp</item>
        <item name="abTextGravity">center</item>
        <item name="abTextColor">@color/colors_efp_onprimary_s_accenttxt_d_onprimary30</item>
        <item name="abTextSize">16dp</item>
        <item name="abTextStyle">normal</item>
        <item name="abTextMaxLines">1</item>
    </style>

    <style name="AppButton.Large.Outline" parent="AppButton.Large">
        <item name="abBackground">@drawable/drawables_outline_r12_e_transparent_fp_onprimary15_d_transparent</item>
    </style>

    <style name="AppButton.Large.Fill.Solid" parent="AppButton.Large">
        <item name="abBackground">@drawable/drawables_fill_e_onprimary_fp_onprimary80_d_onprimary10</item>
        <item name="abTextColor">@color/colors_efp_primary_s_accent_d_onprimary30</item>
        <item name="abIconSrcTint">@color/colors_efp_primary_s_accent_d_onprimary30</item>
    </style>
</resources>