<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size60"
    android:background="@color/tbc_100_a50"
    tools:ignore="ContentDescription, SpUsage, HardcodedText, UseCompoundDrawables"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:id="@+id/home_bottom_nav_control_form_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size01"
        android:background="@color/tbc_10_a20"
        android:layout_gravity="top|center_horizontal" />
</FrameLayout>