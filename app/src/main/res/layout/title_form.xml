<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    tools:viewBindingIgnore="true"
    tools:ignore="SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_form_normal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="6dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_form_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/on_primary"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16dp"
            app:autoSizeMinTextSize="8dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Title"
            tools:gravity="start|center"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/title_form_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/title_form_start_button_1_container"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_button_5_container"
            app:layout_constraintHorizontal_bias="0.0"
            tools:visibility="visible"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/title_form_icon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <FrameLayout
            android:id="@+id/title_form_start_custom_button_container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_goneMarginStart="0dp"
            app:layout_constraintStart_toEndOf="@id/title_form_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <FrameLayout
            android:id="@+id/title_form_start_button_1_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_goneMarginStart="0dp"
            app:layout_constraintStart_toEndOf="@id/title_form_start_custom_button_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_custom_button_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_button_1_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_goneMarginEnd="0dp"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_custom_button_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_button_2_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_button_1_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_button_3_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_button_2_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_button_4_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_button_3_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <FrameLayout
            android:id="@+id/title_form_end_button_5_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/title_form_end_button_4_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/title_form_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/shape_ra18_bg_onprimary10">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_search"
                app:tint="@color/on_primary_70"
                app:tintMode="src_in"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/title_form_search_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:background="@null"
                android:inputType="textNoSuggestions"
                android:textColor="@color/on_primary"
                android:textColorHint="@color/on_primary_40"
                android:textSize="16dp"
                android:textStyle="normal"
                android:singleLine="true"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
                tools:hint="hint Text"/>

            <com.herry.libs.widget.view.AppButton
                android:id="@+id/title_form_search_clear"
                style="@style/AppButton.Icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="4dp"
                android:visibility="gone"
                app:abIconSrc="@drawable/ic_close_filled_small"
                app:abIconSrcTint="@color/colors_e_onprimary70_fp_onprimary10_d_onprimary30"
                tools:visibility="visible" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.herry.libs.widget.view.AppButton
            android:id="@+id/title_form_search_cancel"
            style="@style/AppButton.TextOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:abText="@string/button_cancel"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>