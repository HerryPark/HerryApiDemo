<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_fragment_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tbc_100"
    tools:ignore="HardcodedText"
    tools:viewBindingIgnore="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_fragment_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/news_fragment_top_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_linear_270_tbc_100_a30_to_tbc_0"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>