<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size52"
    android:paddingHorizontal="@dimen/size08"
    android:orientation="horizontal"
    tools:viewBindingIgnore="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recent_keyword_list_item_icon"
        android:layout_width="@dimen/size20"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_search_log" />

    <TextView
        android:id="@+id/recent_keyword_list_item_keyword"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/size08"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="" />

    <FrameLayout
        android:id="@+id/recent_keyword_list_item_delete"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size20"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_clear" />
    </FrameLayout>

</LinearLayout>