<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/media_selection_permission_notice_scene_end"
        motion:constraintSetStart="@id/media_selection_permission_notice_scene_start"
        motion:duration="300" />

    <ConstraintSet
        android:id="@+id/media_selection_permission_notice_scene_start">

        <Constraint
            android:id="@id/share_media_list_fragment_media_access_permission_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/media_selection_permission_notice_scene_end">

        <Constraint
            android:id="@id/share_media_list_fragment_media_access_permission_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>