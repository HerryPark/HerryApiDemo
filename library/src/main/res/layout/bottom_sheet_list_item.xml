<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingHorizontal="32dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/selector_bottom_sheet_list_item_bg"
    tools:ignore="ContentDescription, SpUsage, UseCompoundDrawables">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_list_item_icon"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginEnd="14dp"
        app:tintMode="multiply"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_sheet_list_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textStyle="normal"
            android:textColor="@color/selector_bottom_sheet_list_item_text"
            android:textSize="17dp"
            android:text="" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_sheet_list_item_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start|center_vertical"
            android:textStyle="normal"
            android:textColor="@color/selector_bottom_sheet_list_item_sub_text"
            android:textSize="12dp"
            android:text="" />
    </LinearLayout>
</LinearLayout>
